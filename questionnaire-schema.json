{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Questionnaire template schema",
    "required": ["type", "version", "sections", "routes", "answers", "progress", "meta"],
    "additionalProperties": false,
    "properties": {
        "meta": {
            "type": "object",
            "required": ["questionnaireDocumentVersion"],
            "properties": {
                "questionnaireDocumentVersion": {
                    "enum": ["1.0.0"]
                }
            }
        },
        "type": {
            "type": "string",
            "pattern": "^[a-z]{1,20}(?:-[a-z]{1,20}){0,10}$"
        },
        "version": {
            "$ref": "#/definitions/semver"
        },
        "sections": {
            "type": "object",
            "patternProperties": {
                "^(?:p-?(?:-[a-z0-9]{1,20}){1,20}|system)$": {
                    "type": "object",
                    "required": ["$schema", "examples", "invalidExamples"],
                    "properties": {
                        "$schema": {
                            "const": "http://json-schema.org/draft-07/schema#"
                        },
                        "examples": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "object",
                                "patternProperties": {
                                    "^q(?:-[a-z0-9]{1,20}){1,20}$": {}
                                }
                            }
                        },
                        "invalidExamples": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "object",
                                "patternProperties": {
                                    "^q(?:-[a-z0-9]{1,20}){1,20}$": {}
                                }
                            }
                        }
                    }
                }
            },
            "additionalProperties": false
        },
        "routes": {
            "type": "object",
            "required": ["initial", "referrer", "summary", "confirmation", "states"],
            "properties": {
                "initial": {
                    "$ref": "#/definitions/pageId"
                },
                "referrer": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "^https://"
                },
                "summary": {
                    "$ref": "#/definitions/pageId"
                },
                "confirmation": {
                    "$ref": "#/definitions/pageId"
                },
                "states": {
                    "type": "object",
                    "additionalProperties": false,
                    "patternProperties": {
                        "^(?:p-?(?:-[a-z0-9]{1,20}){1,20}|system)$": {
                            "type": "object",
                            "oneOf": [
                                {
                                    "additionalProperties": false,
                                    "required": ["type"],
                                    "properties": {
                                        "type": {
                                            "const": "final"
                                        }
                                    }
                                },
                                {
                                    "additionalProperties": false,
                                    "required": ["on"],
                                    "properties": {
                                        "on": {
                                            "type": "object",
                                            "required": ["ANSWER"],
                                            "properties": {
                                                "ANSWER": {
                                                    "type": "array",
                                                    "minItems": 1,
                                                    "items": {
                                                        "type": "object",
                                                        "required": ["target"],
                                                        "properties": {
                                                            "target": {
                                                                "$ref": "#/definitions/pageId"
                                                            },
                                                            "cond": {
                                                                "type": "array",
                                                                "minItems": 1
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "answers": {
            "type": "object"
        },
        "progress": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/pageId"
            }
        }
    },
    "definitions": {
        "pageId": {
            "type": "string",
            "pattern": "^(?:p-?(?:-[a-z0-9]{1,20}){1,20}|system)$"
        },
        "questionId": {
            "type": "string",
            "pattern": "^q(?:-[a-z0-9]{1,20}){1,20}$"
        },
        "semver": {
            "type": "string",
            "pattern": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$"
        }
    }
}
